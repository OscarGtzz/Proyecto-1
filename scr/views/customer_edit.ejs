<%- include ('partials/_header')  %>

<div class="card-body">
  <form action="/update/<%= data.id %>" method="POST">
    <div class="form-group">
            <input type="text" name="user" value="<%= data.user%>"  placeholder="user" class="form-control">
        </div>
        <div class="form-group">
            <input type="text" name="date" value="<%= data.date%>"  placeholder="date" class="form-control">
        </div>
        <div class="form-group">
            <input type="text" name="task" value="<%= data.task%>"  placeholder="task" class="form-control">
        </div>
        <button type = "submit" class= "btn btn-primary">
            Edit Activity
        </button>
    </form> 
</div>

        

